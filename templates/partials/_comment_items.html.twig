{% for item in comments %}

            <div class="card">
                <div class="card-header">
                    {{ item.fullname }}
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{ item.content }}</p>
                        <footer class="blockquote-footer">{{ item.createdAt|date('Y-m-d H:i:s') }} | <cite title="Source Title">{{ item.email }}</cite></footer>
                    </blockquote>
                </div>
            </div>


{% endfor %}